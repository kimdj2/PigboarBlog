<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "pig1.jpg", style:"width:100%;" %>
        <div class="carousel-caption" style="opacity: 0.5;background-color:black">
          <h3>New York</h3>
          <p>We love the Big Apple!</p>
        </div>
    </div>
    <div class="item">
      <%= image_tag "pig1.jpg", style:"width:100%;" %>
        <div class="carousel-caption" style="opacity: 0.5;background-color:black">
          <h3>New York</h3>
          <p>We love the Big Apple!</p>
        </div>
    </div>
    <div class="item">
      <%= image_tag "pig1.jpg", style:"width:100%;" %>
        <div class="carousel-caption" style="opacity: 0.5;background-color:black">
          <h3>New York</h3>
          <p>We love the Big Apple!</p>
        </div>
    </div>
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
            </a> <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
            </a> 
</div>
    <hr style="margin-bottom:0;">
    <div class="row">
      <div class="col-sm-9">
      <h2 class="title-font">Recent Posts</h2>
        <% index = 1 %>
        <% @boards.each do |board| %>
            <div class="font_merri jumbotron">  
              <h2 class="board_title title-font">
                <%= link_to({controller: :boards, action: :index, :page => index}, id: :link, class: :menu) do %>
                  <%= board.title %>
                <% end %>
              </h2>
              <div class="italic-font">
                <h4><%= "Post on "+board.created_at.strftime('%Y-%m-%d') %></h4>
              </div> 
              <div class="wf-sawarabigothic">
                <h5><%= Sanitize.clean(board.contents) %></h5>
              </div>
              <% index += 1 %>  
              <br>        
            </div>
            <hr> 
        <% end %>
      </div>
      <div class="col-sm-3">
        <h2 class="title-font">Tags</h2>
        <div class="font_merri">
        <% @tags.each do |tag| %>
          <%= link_to(tag_path(tag.name)) do %>
            <span class="margin-5px">
              <button type="button" class="btn btn-primary btn-xs margin-topbottom-2px">
                <%=tag.name%>&nbsp;<span class="badge"><%=tag.taggings_count%></span>
              </button>
            </span>
          <% end %> 
        <%end%>
        </div>
      </div>
    </div>