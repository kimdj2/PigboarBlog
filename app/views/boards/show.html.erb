<% breadcrumb :board, @board %>
<div class="row">
	<!-- Post Content Column -->
	<div class="col-md-8">
		<div class="blog-item">
			<div class="blog-content">
				<!--<a href="#" class="blog_cat">UI/UX DESIGN</a>-->
				<h2><%= @board.title %></h2>
				<div class="post-meta">
					<p>By <%= @board.author %></p>
					<p><i class="fa fa-clock-o"></i> <%= @board.created_at.strftime('%d %b %Y') %></p>
					<p><i class="fa fa-eye"></i> <%= get_board_view_count(@board)%></p>
					<p><i class="fa fa-comment"></i> <%= get_board_comment_count(@board)%></p>
					<p><i class="fa fa-thumbs-up"></i> <%= get_board_like_count(@board)%></p>
				</div>
				<hr>
				<%= content_tag(:div, @board.contents.html_safe, :class => "board-contents") %>
				<hr>
				<!-- シェアボタン -->
				<div class="inner-meta">
                    <ul class="tags">
						<% @board.tag_list.map do |tag| %>
							<li>
								<%= link_to(tag_path(tag)) do %>
									<i class="fa fa-tags"></i>
									<span class="wf-sawarabigothic maintag">#<%=tag%></span>
								<% end %>
							</li>
						<% end %>
                    </ul>
					<div style="text-align:center;">
						<div class="social-btns">
							<!-- いいね -->
							<span id="likes_buttons_<%= @board.id %>">
								<%= render partial: 'layouts/like', locals: { board: @board, likes: @likes} %>
							</span>
						</div>
						<br>
						<%= social_share_button_tag(@board.contents.html_safe, :url => board_url(@board), desc: @board.title, style:"text-align:center;")%>
					</div>
				</div>
				<!-- いいね -->
				<hr>
				<!-- ログインしているユーザーと作成者が一致する場合は修正ボタンと削除ボタンを表示する。 -->
				<% if user_signed_in? && current_user.username == @board.author%>
				<div style="text-align:right;">
					<%= link_to(edit_board_path(@board), 'data-no-turbolink' => true) do %>
						<i class="fa fa-edit"></i>修正
					<% end %>
					<%= link_to(@board, method: :delete, data: { confirm: '内容を削除します。よろしいですか？' }) do %>
						<i class="fa fa-trash-o"></i>削除
					<% end %>
				</div>
				<% end %>
				<!-- コメントページを表示 -->
				<%= render "comments/widget", commentable: @board %>
			</div>
			<!-- 前へ、次へボタン表示 -->
		</div>
		<% if @before_post != nil %>
			<%= link_to(board_path(@before_post.id)) do %>
			<button type="button" class="btn btn-dark btn-sm" style="float:left;margin-bottom:15px;">←前へ</button>
			<% end %>
		<% end %>
		<% if @next_post != nil %>
			<%= link_to(board_path(@next_post.id)) do %>
			<button type="button" class="btn btn-dark btn-sm" style="float:right;margin-bottom:15px;">次へ→</button>
			<% end %>
		<% end %>
		<br>
		<br>
		<hr>
		<!-- 関連データがある場合 -->
		<% if @related_articles.size > 0 %>
			<!-- 連携Postを表示する。 -->
			<h2>Related Posts</h2>
			<% @related_articles.each do |board| %>
				<div class="blog-item">
					<div class="blog-imgdiv">
					<!-- 内容にイメージが含まれている場合 -->
					<% if !get_content_img(board.contents).blank? %>
						<!-- イメージを表示する。 -->
						<a href="#"><img class="img-responsive img-blog" src="<%=get_content_img(board.contents) %>" width="100%" alt="" /></a>
					<!-- 内容にイメージが含まれていない場合 -->
					<% else %>
						<!-- 基本イメージを表示する。 -->
						<a href="#"><img class="img-responsive img-blog" src="<%= asset_path('default-image2.png')%>" width="100%" alt="" /></a>
					<% end %>
					</div>  
					<div class="blog-content">
					<% board.tag_list.map do |tag| %>  
						<%= link_to(tag_path(tag),class:"blog_cat") do %>
						#<%=tag%>&nbsp;
						<% end %>
					<% end %>
					<h2><%= link_to(board_path(board.id)) do %><%= truncate(board.title, length: 20) %><% end %></h2>
					<div class="post-meta">
						<p>By <%= board.author %></p>
						<p><i class="fa fa-clock-o"></i> <%= board.created_at.strftime('%d %b %Y') %></p>
						<p><i class="fa fa-comment"></i> <%= get_board_comment_count(board)%></p>
						<p><i class="fa fa-thumbs-up"></i> <%= get_board_like_count(board)%></p>
						<p>
							<%= social_share_button_tag(board.contents.html_safe, :url => board_url(board), desc: board.title, style:"text-align:center;")%>
						</p>
					</div>
					<h3><%= truncate(Sanitize.clean(board.contents), length: 50) %></h3>
					<%= link_to(board_path(board.id), class:"readmore") do %>
						Read More<i class="fa fa-long-arrow-right"></i>
					<% end %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
	<!-- 画面右側のリスト表示 -->
	<%= render "layouts/menu" %>
</div>
