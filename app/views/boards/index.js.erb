//もっと見る処理後の画面制御
//データを画面下部に追加表示する。
window.DISQUSWIDGETS = undefined;
//もっと見るボタンを再表示する。
$("#masonry-container").append("<%= escape_javascript(render 'article', boards: @boards) %>").masonry('reloadItems').masonry('layout').each(function(){                              
  $.getScript("//pigboars.disqus.com/count.js", function(){
      $("#more_link").replaceWith("<%= escape_javascript(
        link_to_next_page(@boards, 'もっと見る', remote: true, id: 'more_link')
      ) %>");
      $('.mas-box').each(function(i){
        $(this).animate({opacity: '1'}, 1000)
      });
      $('#more_link').animate({opacity: '1'}, 2000);
      $('.ajax_loading').hide();
  });         
});
