<!-- 認証用モーダルページ -->
<div class="modal fade bd-example-modal-lg" id="login_popup">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="close" data-dismiss="modal">×</button> 
                        <h2>Login</h2>
                        <hr>
                    </div>
                    <div class="col-md-5" >
                        <%= link_to '/users/auth/twitter', class: "btn btn-block btn-social btn-twitter" do %>
                            <span class="fa fa-twitter"></span> Twitterアカウントでログイン
                        <% end %>
                        <%= link_to '/users/auth/facebook', class: "btn btn-block btn-social btn-facebook" do %>
                            <span class="fa fa-facebook"></span> Facebookアカウントでログイン
                        <% end %>
                        <%= link_to '/users/auth/github', class: "btn btn-block btn-social btn-github" do %>
                            <span class="fa fa-github"></span> Githubアカウントでログイン
                        <% end %>
                    </div>
                    <div class="col-md-7" style="border-left:1px solid #ccc;height:160px">
                        <h5 style="margin-top:10px;">eメールでログイン</h5>
                        <%= form_for(resource, :as => resource_name,:url => session_path(resource_name) ,:html => {:id => "sign_in_user"}, :format => :json, :remote => true,class:"form-horizontal" ) do |f| %>
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="field">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Enter Your Email..", class:"form-control input-md" %>
                                </div>
                                <div class="field">
                                    <%= f.password_field :password, autocomplete: "off",placeholder:"Enter Your Password..",  class:"form-control input-md" %>
                                </div>
                                <div class="actions">
                                    <span id = "login_error_message" style="color:red;"></span>
                                    <%= f.submit "Login", class:"btn btn-info btn-sm pull-right" %>
                                </div>
                            </fieldset>
                        </form>
                        <% end %>
                    </div>
                    <div class="col-md-12">
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>