<section id="contact-page" style="padding-top:70px;background-color:#191b1d;">
    <div class="container">
        <hr>
        <div class="text-center">        
            <h1 style='font-weight:700;color:#FFF'><span style="color:#EC5538;">C</span>ontact Me</h1>
        </div>
        <div class="row contact-wrap"> 
        	<div class="col-sm-12">
            <%= form_for @contact , url: '/contact/send',id:"contactForm", name:"sentMessage", remote: true  do |f| %>
                <div class="status alert alert-success" style="display: none"></div>
                <div class="row" id="contact-form-list"> 
                    <div class="col-sm-6 col-sm-offset-1" >
                        <div class="form-group">
                            <label>Name *</label>
                            <%= f.text_field :name, class:"form-control", id:"contact_name", required:"required" %>
                        </div>
                        <div class="form-group">
                            <label>Email *</label>
                            <%= f.email_field :email, class:"form-control", id:"contact_email", required:"required" %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Message *</label>
                            <%= f.text_area :message, class:"form-control", id:"contact_message", required:"required" %>
                        </div>                        
                        <div class="form-group">
                            <%= f.submit 'メッセージ送信', id:"sendMessageButton", class:"btn btn-primary btn-lg" %>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#contact-page-->