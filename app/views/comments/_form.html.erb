
  <% if comment.persisted? or comment.parent %>
    <div class="single-comment reply" id="reply_form">
  <% else %>  
    <div class="single-comment">
  <% end %>
  <!-- コメント入力フォーム -->
    <div class="comment-img">
      <% if current_user.image.blank? %>
        <!-- 基本イメージを表示する。 -->
        <%=image_tag("defaultPerson.jpg")%>
      <!-- ユーザーイメージが存在する場合 -->
      <% else %>
        <!-- ユーザー情報のイメージを表示する。 -->
        <%=image_tag(current_user.image)%>
      <% end %>
    </div>

  <% if !(comment.persisted? or comment.parent) %>
    <div class="comment-content comment-form">
  <% else %>
    <div class="comment-content">
  <% end %>
    <%= simple_form_for [comment.commentable, comment], remote: true do | f | %>
        <%= f.hidden_field :parent_id %>
        <!-- コメント内容入力フォーム -->
        <%= f.input :content, as: :summernote, label: false, input_html: { rows: 5, style:"width:100%;",'data-provider': :summernote2 } %>
      <div style="text-align:right;">  
        <%= f.submit "コメント作成", class: 'btn btn-primary btn-sm float-xs-right', style: "margin-top:10px;" %>
        <%= link_to "キャンセル", "#", 'data-reply': comment.parent_id.present?,style: 'margin-top:10px;', class: 'cancel-comment-link btn btn-primary btn-sm float-xs-right ml-1' if comment.persisted? or comment.parent %>
      </div>
    <% end %>
    </div>
</div>
