<%= simple_form_for [comment.commentable, comment], remote: true do | f | %>
  <%= f.hidden_field :parent_id %>
  <%= f.input :content, label: false, placeholder: (f.object.parent_id.nil? ? 'Share your idea.' : 'Leave your reply.'), input_html: { rows: 5, style:"width:100%;",'data-provider': :summernote2 } %>
  <%= link_to "Cancel", "#", 'data-reply': comment.parent_id.present?,style: 'float:right', class: 'cancel-comment-link btn btn-primary btn-sm float-xs-right ml-1' if comment.persisted? or comment.parent %>
  <%= f.submit class: 'btn btn-primary btn-sm float-xs-right', style: "float:right" %>
<% end %>